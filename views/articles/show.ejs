<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sibra Blog</title>
    <link rel="stylesheet" href="/css/style.min.css">
</head>

<body class="post-body">

    <%- include('_navbar') %>

        <div class="post post-container">
            <h1 class="post__title">
                <%= article.title %>
            </h1>
            <p class="post__description">
                <%= article.description %>
            </p>
            <div class="post__date">
                Fecha de publicaci칩n: <%= article.createdAt.toLocaleDateString() %>
            </div>
            <!-- <a href="/" class="btn btn-secondary">All articles</a> -->
            <!-- <a href="/articles/edit/<%= article.id %> " class="btn btn-info text-white">Edit</a> -->
            <div class="post__image">
                <img src="/images/<%= article.image %> " alt="">
            </div>
            <div class="post__content">
                <div class="post-html">
                    <%- article.sanitizedHtml %>
                </div>
            </div>

            <a href="/articles/edit/<%= article.id %> " class="btn btn-info text-white">Edit</a>
        </div>

        <h2 class="moreTitle">M치s Posts</h2>
        
        <div class="more">

            <% articles.forEach(post => { %>

                <% if (post.id !== article.id) { %>

                    <div onclick="location.href='/articles/<%= post.slug %>';" style="cursor: pointer;" class="card mt-4">
                        <div class="card__header">
                            <div class="card__img">
                                <img src="/images/<%= post.image %> " alt="home">
                            </div>
                        </div>
                        <div class="card__body">
                            <div class="card__body__top">
                                <h4 class="card__title">
                                    <%= post.title %>
                                </h4>
                                <div class="card__date">
                                    Fecha de publicaci칩n: <%= post.createdAt.toLocaleDateString() %>
                                </div>
                            </div>
                            <div class="card__text">
                                <%= post.description %>
                            </div>
                            <a href="/articles/<%= post.slug %>" class="card__btn">Leer m치s</a>
                        </div>
                    </div>

                <% } %>

            <% }) %>

        </div>
        <div class="all">
            <a href="/" class="btn">Todos los Posts</a>
        </div>

        <script src="/js/index.js"></script>
</body>

</html>