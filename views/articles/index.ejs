<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sibra Blog</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/css/style.min.css">
</head>

<body>

    <div class="container mt-5">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article=> { %>
            <div class="card mt-4">
                <div class="card-body">
                    <div class="card-header"></div>
                    <h4 class="card-title">
                        <%= article.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text">
                        <%= article.description %>
                    </div>
                    <a href="articles/<%= article.slug %>" class="btn btn-primary mt-3">Read More</a>
                    <a href="articles/edit/<%= article.id %>" class="btn btn-info mt-3 text-white">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" >
                        <button type="submit" class="btn btn-danger mt-1">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>

    </div>

</body>

</html>