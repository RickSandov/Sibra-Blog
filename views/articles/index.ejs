<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sibra Blog</title>
    <link rel="stylesheet" href="/css/style.min.css">
</head>

<body>

    <%- include('_navbar') %>

    <div class="posts-container mt-5">
        <h1>Sibra Blog</h1>

        <div class="post">

            <% articles.forEach(article=> { %>
                <div onclick="location.href='articles/<%= article.slug %>';" style="cursor: pointer;" class="card mt-4">
                    <div class="card__header">
                        <div class="card__img">
                            <img src="/images/<%= article.image %> " alt="home">
                        </div>
                    </div>
                    <div class="card__body">
                        <div class="card__body__top">
                            <h4 class="card__title">
                                <%= article.title %>
                            </h4>
                            <div class="card__date">
                                Fecha de publicación: <%= article.createdAt.toLocaleDateString() %>
                            </div>                    
                        </div>
                        <div class="card__text">
                            <%= article.description %>
                        </div>
                        <a href="articles/<%= article.slug %>" class="card__btn">Leer más</a>
                    </div>
                </div>
            <% }) %>

        </div>

    </div>

    <script src="/js/index.js"></script>
</body>

</html>